<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:paddingBottom="60dp"
                    android:layout_height="wrap_content">
        <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textSize="24sp"
                />
        <Spinner
                android:id="@+id/city_spinner"
                android:layout_marginRight="50dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text1"
                >
        </Spinner>
        <TextView
                android:id="@+id/text2"
                android:layout_toRightOf="@id/city_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operator"
                android:textSize="24sp"
                android:gravity="center_vertical"
                />
        <Spinner
                android:layout_toRightOf="@id/text2"
                android:id="@+id/operator"
                android:layout_width="200dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">
        </Spinner>
        <TextView
                android:layout_toRightOf="@id/operator"
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list"
                android:textSize="24sp"
                android:gravity="center_vertical"
                />
        <Spinner
                android:layout_toRightOf="@id/text3"
                android:id="@+id/list"
                android:layout_width="200dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">
        </Spinner>

        <TextView
                android:id="@+id/current_node"
                android:text="@string/current_node"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list"
                android:textSize="24sp"
                />
        <TextView
                android:id="@+id/current_node_text"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:layout_alignBaseline="@id/current_node"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/current_node"
                android:layout_height="wrap_content"/>


        <Button
                android:id="@+id/speed_test_btn"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textSize="24sp"
                />


    </RelativeLayout>


    <GridView
            android:descendantFocusability="beforeDescendants"
            android:id="@+id/node_list_view"
            android:verticalSpacing="30dp"
            android:numColumns="3"
            android:horizontalSpacing="30dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </GridView>

</LinearLayout>